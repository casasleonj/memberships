<div class="devise-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-5">
        <div class="card mt-5 mb-2">
          <div class="card-header">Forgot your password?</div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="card-body">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control #{input_status_class(resource, :email)}", autofocus: true, autocomplete: "email" %>
                <%= invalid_msg(resource, :email) if is_invalid?(resource, :email) %>
              </div>
            </div>
            <div class="card-footer text-right">
              <%= f.submit "Reset password", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
